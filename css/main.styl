gris_oscuro=#444
azul=#22bce0
naranja=#dd4f24
gris_texto=#7a7a7a

@font-face {
	font-family: 'sirope';
	src:url('../fonts/icomoon.eot');
	src:url('../fonts/icomoon.eot?#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.woff') format('woff'),
		url('../fonts/icomoon.ttf') format('truetype'),
		url('../fonts/icomoon.svg#icomoon') format('svg');
	font-weight: normal;
	font-style: normal;
}


a
	color naranja

body
	background #e8e8e8
	color gris_oscuro
	font-family Segoe UI
	font-size 16px

footer
	background naranja
	color rgba(white, .75)
	padding 1em 0
	text-align center
	width 100%

	h3
		font-weight normal
		font-size 14px
		
		strong
			display block
		.clase
			&:before
			&:after
				content " - "	

header
	background gris_oscuro
	box-shadow 0 5px 0 rgba(0, 0, 0, .2)
	color white
	overflow hidden
	padding 0.5em
	position relative
	z-index 2

	.logo
		border-right 1px solid azul
		width 60px
		img
			width 52px
	.titular
		margin 0 80px 0 70px
		.filtro 
			color azul
			font-size 14px
			font-style italic
			font-weight bold
			text-decoration none

		.publicar
			background naranja
			color white
			font-style italic
			padding 0.2em 0.5em
			text-decoration none
			float right
			text-shadow 1px 1px 0px black
			&:before
				content "\e600"
				font-family "sirope"

		.titulo
			font-size 18px
			font-weight normal
			margin 10
			padding 10

	.usuario
		position absolute
		right 0
		top 0
		.avatar
			margin 0 1.1em 0 0
			z-index 69			
			img
				border-radius 50%
				width 50px
		.flechita
			background naranja
			color white
			display block
			padding 2px
			position absolute
			right 0
			text-align right
			text-decoration none
			top 15px
			width 25%
			z-index 0
			&:before
				content "\e603"
				font-family "sirope" 

nav
	background azul
	border-left 15px solid white
	position relative
	
	&:before
		border-bottom 20px solid azul
		border-top 20px solid azul
		content ""
		border-left 7px solid white
		position absolute 
		left 0
		top 0

		 

	.menu
		height 40px 
		line-height 40px
		margin 0
		padding 0
		overflow-x auto 
		white-space nowrap
		&::-webkit-scrollbar
			display none

		li
			display inline-block

			a
				color white
				display block
				margin 0 0.5em
				padding 0 0.2em 
				text-decoration none

				&:hover
					background rgba(black, .1)

.posts 
	padding 0.5em

	.post
		background white
		border-radius 0 0 0.5em 0.5em
		box-shadow 2px 2px 10px rgba(black, .5)
		color gris_texto
		margin-bottom 0.5em

		.acciones
			border-top 3px solid azul
			padding 0.5em
			overflow hidden

			.votos
				float left

				.up
				.down
					text-decoration none


				.down 
					color red
					&:before 
						font-family "sirope"
						content "\e604"
						vertical-align middle
				.up 
					color green
					&:before 
						font-family "sirope"
						content "\e603"
						vertical-align middle	

			.datos
				float right

				.comentarios
					background gris_oscuro
					border-radius 3px
					color white
					padding 2px 5px
					text-decoration none
					margin 0 1em 0 0

				.estrellita
					
					text-decoration none
					&:before
						color rgba(255, 190, 0, .75)
						font-family "sirope"
						content "\e602"
						vertical-align middle
						font-size 1.2em
		.descripcion
			
			.detalles
				height 160px
				margin-left 130px

				.autor
					margin 0.5em 0 2em 0

				.tag
					background azul
					color white
					text-decoration none
					padding 0.2em 0.5em
					border-radius 0.5em

				.fecha
					float right
					margin 0 1em 0 0 


				.titulo 
					color gris_oscuro
					font-size 18px
					font-style italic
					margin 0
					padding 0.5em 0.5em 0 0


			.imagen
				float left
				img
					height 160px
					vertical-align top
					width 120px

.left
	float left

.right
	float right

@media screen and (min-width: 768px)
	
	header
		.titular
			.publicar
				font-size 1.5em
				position relative
				padding-left 3em
				&:before
					position absolute
					left 0 
					top -5px
					font-size 2em

	.posts
		.post
			width 48%
			display inline-block
			vertical-align top				
			&:nth-child(odd)	
				margin-right 2%